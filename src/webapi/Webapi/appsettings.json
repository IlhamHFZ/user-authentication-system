{
  "Serilog":{
    "Using": [
      "Serilog.Sinks.File", 
      "Serilog.Sinks.Console", 
      "Serilog.Enrichers.ClientInfo", 
      "Serilog.Expressions"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore.Mvc": "Warning",
        "Microsoft.AspNetCore.Routing": "Information",
        "Microsoft.AspNetCore.Hosting": "Information"
      }
    },
    "Enrich": [
      {
        "Name": "WithCorrelationId",
        "Args": {
          "headerName": "Correlation-Id",
          "addValueIfHeaderAbsence": true
        }
      }
    ],
    "WriteTo": [{
        "Name": "Async",
        "Args": {
          "Configure": [{
              "Name": "File",
              "Args": {
                "formatter": {
                  "type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",
                  "theme": "Serilog.Templates.Themes.TemplateTheme::Literate, Serilog.Expressions",
                  "template": "[{@t:HH:mm:ss.fff} {@l:u3}]{#if CorrelationId is not null} [Correlation-Id: {CorrelationId}]{#end} {@m} \n{@x}",
                  "applyThemeWhenOutputIsRedirected": true
                },
                "path": "Logs/log.txt",
                "restrictedToMinimumLevel": "Debug",
                "rollingInterval": "Day",
                "rollonFileSizeLimit": true,
                "retainedFileCountLimit": null
              }
            },
            {
              "Name": "Console",
              "Args":{
                "formatter": {
                  "type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",
                  "theme": "Serilog.Templates.Themes.TemplateTheme::Literate, Serilog.Expressions",
                  "template": "[{@t:HH:mm:ss.fff} {@l:u3}]{#if CorrelationId is not null} [Correlation-Id: {CorrelationId}]{#end} {@m} \n{@x}",
                  "applyThemeWhenOutputIsRedirected": true
                }
              }
            }
          ]
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
